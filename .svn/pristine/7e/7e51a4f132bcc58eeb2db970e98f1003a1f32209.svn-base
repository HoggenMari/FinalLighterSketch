import processing.core.PImage;

public class LEDScreen {
	private int x;
	private int y;
	private int[] ScreenImg;

	public LEDScreen(int x, int y, int[] ScreenImg) {
		this.x = x;
		this.y = y;
		this.ScreenImg = ScreenImg;
	}

	public void drawImage(PImage image) {
		for (int ix = 0; ix < x; ix = ix + 1) {
			for (int iy = 0; iy < y; iy = iy + 1) {
				ScreenImg[(ix * y) + iy] = image.get(ix, iy);
			}
		}
	}

	public int[] getImage() {
		return ScreenImg;
	}

	void setPixel(int ix, int iy, int rgb) {
		this.ScreenImg[(ix * this.y) + iy] = rgb;
	}

}