package Kinect;
import SimpleOpenNI.SimpleOpenNI;
import processing.core.PApplet;
import processing.core.PImage;


public class SimpleScene extends Kinect{

	private PApplet p;

	public SimpleScene (PApplet p, SimpleOpenNI context) {
		enableStrategy = new EnableScene();
		drawStrategy = new DrawScene();
		this.p = p;
	}

	@Override
	public SimpleOpenNI enable() {
		return enableStrategy.enable(p);
	}

	@Override
	public PImage draw(SimpleOpenNI context) {
		return drawStrategy.draw(context);
	}

	@Override
	public void init(SimpleOpenNI context) {
		// TODO Auto-generated method stub
		
	}
}
