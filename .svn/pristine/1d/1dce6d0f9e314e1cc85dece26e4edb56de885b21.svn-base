package Kinect;
import SimpleOpenNI.SimpleOpenNI;
import processing.core.PApplet;
import processing.core.PImage;


public class PaintHand extends Kinect{

	private PApplet p;

	public PaintHand (PApplet p) {
		enableStrategy = new EnableDepth();
		initStrategy = new InitSkeleton();
		drawStrategy = new DrawSkeleton(p);
		this.p = p;
	}

	@Override
	public SimpleOpenNI enable() {
		return enableStrategy.enable(p);
	}
	
	public void init(SimpleOpenNI context) {
		initStrategy.init(context);
	}

	@Override
	public PImage draw(SimpleOpenNI context) {
		return drawStrategy.draw(context);
	}
}
